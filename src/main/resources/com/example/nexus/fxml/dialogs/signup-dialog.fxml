<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.nexus.controller.SignUpController"
      styleClass="auth-dialog-root" alignment="CENTER" spacing="0" prefWidth="450" prefHeight="600">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="8" styleClass="auth-header">
        <padding><Insets top="40" right="40" bottom="30" left="40"/></padding>
        <Label text="Create Account" styleClass="auth-title"/>
        <Label text="Sign up for a new Nexus account" styleClass="auth-subtitle"/>
    </VBox>

    <!-- Form Container -->
    <VBox alignment="CENTER" spacing="20" styleClass="auth-form-container">
        <padding><Insets top="20" right="40" bottom="20" left="40"/></padding>

        <!-- Username Field -->
        <VBox spacing="8" styleClass="auth-field-group">
            <Label text="Username" styleClass="auth-label"/>
            <TextField fx:id="usernameField" promptText="Enter your username" styleClass="auth-field" prefWidth="350"/>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="8" styleClass="auth-field-group">
            <Label text="Email" styleClass="auth-label"/>
            <TextField fx:id="emailField" promptText="Enter your email" styleClass="auth-field" prefWidth="350"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="8" styleClass="auth-field-group">
            <Label text="Password" styleClass="auth-label"/>
            <PasswordField fx:id="passwordField" promptText="Create a password" styleClass="auth-field" prefWidth="350"/>
        </VBox>

        <!-- Confirm Password Field -->
        <VBox spacing="8" styleClass="auth-field-group">
            <Label text="Confirm Password" styleClass="auth-label"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" styleClass="auth-field" prefWidth="350"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true" maxWidth="350"/>

        <!-- Sign Up Button -->
        <Button fx:id="signUpButton" text="Create Account" styleClass="auth-primary-button" maxWidth="350" onAction="#handleSignUp"/>

        <!-- Divider -->
        <HBox alignment="CENTER" spacing="10" styleClass="auth-divider">
            <padding><Insets top="10" bottom="10"/></padding>
            <Separator HBox.hgrow="ALWAYS"/>
            <Label text="or" styleClass="auth-divider-text"/>
            <Separator HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Sign In Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" styleClass="auth-link-label"/>
            <Button fx:id="signInLinkButton" text="Sign In" styleClass="auth-link-button" onAction="#handleShowSignIn"/>
        </HBox>
    </VBox>

    <!-- Footer -->
    <Region VBox.vgrow="ALWAYS" minHeight="20"/>
</VBox>

